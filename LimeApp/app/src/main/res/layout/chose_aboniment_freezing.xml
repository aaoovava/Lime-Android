<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chose_back" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="262dp"
        android:layout_height="78dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Виберіть абонемент:"
        android:textColor="@color/Status1"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView53"
        app:layout_constraintEnd_toEndOf="@+id/imageView53"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/imageView53"
        app:layout_constraintTop_toTopOf="@+id/imageView53"
        app:layout_constraintVertical_bias="0.047" />

    <ImageView
        android:id="@+id/abonimentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView53"
        app:layout_constraintEnd_toEndOf="@+id/imageView53"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/imageView53"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        app:layout_constraintVertical_bias="0.066"
        app:srcCompat="@drawable/chuse_button" />

    <TextView
        android:id="@+id/personalAboniment"
        android:layout_width="262dp"
        android:layout_height="78dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Персональний абонемет"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/abonimentButton"
        app:layout_constraintEnd_toEndOf="@+id/abonimentButton"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/abonimentButton"
        app:layout_constraintTop_toTopOf="@+id/abonimentButton"
        app:layout_constraintVertical_bias="0.47000003" />

    <ImageView
        android:id="@+id/groupAbonimentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView53"
        app:layout_constraintEnd_toEndOf="@+id/imageView53"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/imageView53"
        app:layout_constraintTop_toBottomOf="@+id/abonimentButton"
        app:layout_constraintVertical_bias="0.14"
        app:srcCompat="@drawable/chuse_button" />

    <TextView
        android:id="@+id/groupAboniment"
        android:layout_width="237dp"
        android:layout_height="73dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Груповий абонемент"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/groupAbonimentButton"
        app:layout_constraintEnd_toEndOf="@+id/groupAbonimentButton"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="@+id/groupAbonimentButton"
        app:layout_constraintTop_toTopOf="@+id/groupAbonimentButton"
        app:layout_constraintVertical_bias="0.476" />
</androidx.constraintlayout.widget.ConstraintLayout>