<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="70dp"
    >

    <ImageView
        android:id="@+id/isPick"
        android:layout_width="72dp"
        android:layout_height="53dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/date_back" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="10 Січ"
        android:textColor="@color/Status1"
        app:layout_constraintBottom_toBottomOf="@+id/isPick"
        app:layout_constraintEnd_toEndOf="@+id/isPick"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/isPick"
        app:layout_constraintTop_toTopOf="@+id/isPick"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Вівторок"
        android:textColor="@color/Status1"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/isPick"
        app:layout_constraintEnd_toEndOf="@+id/isPick"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/isPick"
        app:layout_constraintTop_toTopOf="@+id/isPick"
        app:layout_constraintVertical_bias="0.83" />
</androidx.constraintlayout.widget.ConstraintLayout>