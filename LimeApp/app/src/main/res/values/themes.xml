<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LimeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7FF887</item>
        <item name="colorPrimaryVariant">#4CAF50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7FF887</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:progressBackgroundTint">#7FF887</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="c_">
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing">-0.02</item>
    <item name="android:textColor">#545F71</item>
</style>
    <style name="telephon">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#4C5666</item>
    </style>
    <style name="Theme.LimeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.LimeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.LimeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>